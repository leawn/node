<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <% if (prods.length > 0) { %>
        <div class="grid">
            <% prods.map((product) => { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="https://media.gettyimages.com/photos/single-red-book-on-a-white-surface-picture-id173015527?s=612x612" alt="Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$19.99</h2>
                        <p class="product__description">A very interesting book, you should try it</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">
                            Add to Cart
                        </button>
                    </div>
                </article>
            <% }) %>
        </div>
    <% } else { %>
        <h1>No Products</h1>
    <% } %>
</main>

<%- include('../includes/end.ejs') %>